<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    app:cardCornerRadius="5dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/undraw_profile_pic"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center"
            android:contentDescription="UserImage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_TextV_UserCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"/>

            <TextView
                android:id="@+id/distance_TextV_UserCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_distance"/>

            <TextView
                android:id="@+id/latlong_TextV_UserCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LatLon"/>

            <TextView
                android:id="@+id/addressLine_TextV_UserCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>